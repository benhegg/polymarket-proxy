# Polymarket Whale Tracker - Environment Variables
# Copy this file to .env and fill in your values

# Telegram Notifications (Optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_PATH=./data/whales.db

# Polling
POLL_INTERVAL_SECONDS=300

# Signal Thresholds (Optional - defaults in config.py)
# VOLUME_SPIKE_MULTIPLIER=5.0
# SMART_MONEY_MIN_VOLUME=50000.0
# ORDER_BOOK_IMBALANCE_THRESHOLD=0.70
# LIQUIDITY_DRAIN_THRESHOLD_PCT=20.0
# LARGE_ORDER_THRESHOLD=50000.0

# Paper Trading
PAPER_TRADING_ENABLED=true
PAPER_TRADE_AUTO_ENTER=true
PAPER_TRADE_AMOUNT=100.0
PAPER_TRADE_HOLD_HOURS=24

# Logging
LOG_LEVEL=INFO
